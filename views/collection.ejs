<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Louer Luxe Collection</title>
    <link rel="stylesheet" href="/collection.css" />
  </head>
  <body>
    <div class="container">
      <div class="vertical-nav">
        <div class="header">
          <h4 class="logo">
            <span class="font">L</span>ouer <span class="font">L</span>uxe
            (admin panel)
          </h4>
        </div>
        <div class="nav-menu">
          <ul class="nav-items">
            <li class="item">
              <a class="no-line" href="/admin/dashboard">Dashboard</a>
            </li>
            <li class="item">
              <a class="no-line" href="/admin/collection">Manage Collection</a>
            </li>
            <li class="item"><a class="no-line" href="/add">Add Car</a></li>
            <li class="item">
              <a class="no-line" href="/register">Reister New Admin</a>
            </li>
            <li class="item">
              <a class="no-line" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
      <div class="other-panel">
        <div class="collection">
          <% cars.forEach(car => {%>
          <div class="card">
            <div class="card-cont">
              <img class="car-img" src="<%= car.image %>" alt="car" />
              <h3 class="tittle"><%= car.model %></h3>
              <div class="buttons">
                <form action="/edit" method="get">
                  <input type="hidden" name="id" value="<%= car.id %>" />
                  <input class="edit btn" type="submit" value="Edit" />
                </form>
                <form action="/delete" method="post">
                  <input type="hidden" name="id" value="<%= car.id %>" />
                  <input class="delete btn" type="submit" value="Delete" />
                </form>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
  </body>
</html>
